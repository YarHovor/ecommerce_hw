{% extends 'base.html.twig' %}

{% block title %}Обратная связь{% endblock %}

{% block body %}
    <h1>Обратная связь</h1>

    {# функции #}
    {{ form_start(form, {'attr': {'novalidate': true}}) }} {# форма старт рисует тег форм, со всеми параметрами #} {# novalidete - виводить про ошибку#}
    {{ form_widget(form) }}         {# отрисовывает все поля в форме #}
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
    </div>
    {{ form_end(form) }}  {# рисует закрывающий тег #}
{% endblock %}