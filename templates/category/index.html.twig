{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Категории</h1>
    <div class="row">
        <div class="col-md-6 col-lg-3">


            {% for category in categorys %}

                {% if category.image and vich_uploader_asset(category, 'image') %}
                    <img src="{{ vich_uploader_asset(category, 'image')|imagine_filter('product_thumb') }}" class="card-img-top" alt="...">
                {% else %}
                    <img src="//placehold.it/200x150" class="card-img-top" alt="...">
                {% endif %}
                <div class="card-body">
                    <p>

                        <a href="{{ path('category_show', {'id': category.id}) }}">
                            {{ category.id }} - {{ category.name }}</a>

                    </p>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
